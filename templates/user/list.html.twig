{% extends 'base.html.twig' %}


{% block header_title %}
	<h1>CLeura | Users</h1>
{% endblock %}

{% block body %}
	{% if users|length == 0 %}
		<div class="alert alert-warning" role="alert">
			Not users registered yet!!.
			<a href="{{ path('app_user_create') }}" class="btn btn-warning pull-right">Create a user</a>
		</div>
	{% else %}
		<div class="row">
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Email address</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<th scope="row">{{ loop.index }}</th>
							<td>{{ user.name }}</td>
							<td>{{ user.email }}</td>
							<td>
								<a href="{{ path('app_user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">Modify</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
