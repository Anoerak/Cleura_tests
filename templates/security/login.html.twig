{% extends "base.html.twig" %}

{% block body %}
	{# <turbo-frame id="turbo-login"> #}
	<div class="form">
		<form action="{{ path('app_login') }}" method="post">
			<div id="login-form">
				<div>
					<label for="email">Email:</label>
					<input type="email" id="email" placeholder="email" name="_username" value="{{ last_username }}"/>
				</div>

				<div>
					<label for="password">Password:</label>
					<input type="password" id="password" placeholder="password" name="_password"/>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button class="btn btn-success" type="submit">Log In</button>
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('app_user_create') }}" class="btn btn-primary">Create a user</a>
				{% endif %}
				<br>
				<p>For the admin profile, use the email: "admin@admin.se" and the password
					<strong>Cleur@2023</strong>
				</p>
				<p>For the user profile, use the email: "user@user.se" and the password
					<strong>Cleur@2023</strong>
				</p>
			</div>
		</form>
	</div>
	{# </turbo-frame> #}
{% endblock %}
